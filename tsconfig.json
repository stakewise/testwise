{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "config": [
        "src/config"
      ],
      "contracts": [
        "src/contracts"
      ],
      "fixtures": [
        "src/fixtures"
      ],
      "fixtures/*": [
        "src/fixtures/*"
      ],
      "helpers": [
        "src/helpers"
      ],
      "scripts/*": [
        "src/scripts/*"
      ],
      "specks": [
        "src/specks"
      ],
      "tests": [
        "src/tests"
      ],
      "translations": [
        "src/translations"
      ],
      "utils": [
        "src/utils"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
